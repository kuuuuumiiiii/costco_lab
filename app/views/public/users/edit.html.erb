<h3>プロフィール編集</h3>

<%= form_with model: @user do |f| %>
  <div class="field">
  <%= f.label :"名前(姓)" %><br>
  <%= f.text_field :first_name %>
  </div>

  <div class="field">
  <%= f.label :"名前(名)" %><br>
  <%= f.text_field :last_name %>
  </div>

  <div class="field">
  <%= f.label :"名前(セイ)" %><br>
  <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
  <%= f.label :"名前(メイ)" %><br>
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"紹介" %><br />
    <%= f.text_area :introduction %>
  </div>
  
  <div class="field">
    <%= f.label :"プロフィール画像" %><br />
    <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>  
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>