<h3>投稿詳細</h3>

<div>
  <%= image_tag @post.user.get_profile_image(60,60) %><%= @post.user.name %><br>
  <%= image_tag @post.get_image(300,300) %>
  <p>タイトル</p>
  <%= @post.title %>
  <p>説明</p>
  <%= @post.body %>


  <div>
    <%= link_to "編集", edit_post_path(@post.id) %>
  </div>
  <div>
    <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </div>